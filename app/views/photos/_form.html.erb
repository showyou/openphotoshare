<% form_for(@photo,:html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Photo</b><br />
	<%= file_column_field("photo", "image") %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
