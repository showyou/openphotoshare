<h1>Editing photo</h1>

<% form_for(@photo,:html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <b>Title</b>
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Photo</b><br />
	<%= image_tag url_for_file_column("photo", "image") %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Show', @photo %> |
<%= link_to 'Back', photos_path %>
